#include<iostream>
#include"MyLib.h"
#include"SumLib.h"
#include <string>
#include<vector>
using namespace std;

string RemovePunctuationsFromString(string S1)
{
	string S2 = "";
	for (short i = 0; i < S1.length(); i++)
	{
		if (!ispunct(S1[i]))
		{
			S2 += S1[i];
		}
	}

	return S2;
}

int main()
{
	srand((unsigned)time(NULL));

	string S1 = "Welcom to Jordan ,Jordan is a nice country; it's amazing.";

	cout << "\nOriginal String :\n" << S1;
	cout << "\n\nPuncuations Removed:\n" << RemovePunctuationsFromString(S1) << endl;

	cout << endl;
}


