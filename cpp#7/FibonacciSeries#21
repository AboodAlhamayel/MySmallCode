#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

void PrintFibonacciUsingLoop(short Number)
{
    int FebNumber = 0;
    int Prev2 = 0, Prev1 = 1;
    cout << "1  ";
    for (short i = 2; i <= Number; ++i)
    {
        FebNumber = Prev1 + Prev2;
        cout << FebNumber << "  ";
        Prev2 = Prev1;
        Prev1 = FebNumber;
    }
}

int main()
{
    PrintFibonacciUsingLoop(10);

    system("pause>0");
    return 0;
}

