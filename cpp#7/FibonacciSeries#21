#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

void FibonacciSeries(short Number)
{
    int Prev1 = 1, Prev2 = 1;
    int temp;

    cout << Prev1 << "  " << Prev2 << "  ";
    for (short i = 0; i < Number; i++)
    {
        temp = Prev1 + Prev2;
        Prev2 = Prev1;
        Prev1 = temp;
        cout << temp << "  ";
    }
}

int main()
{
    FibonacciSeries(8);

    system("pause>0");
    return 0;
}
