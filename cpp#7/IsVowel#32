#include<iostream>
#include"MyLib.h";
#include"SumLib.h";
#include <string>
using namespace std;

char ReadChar()
{
    char Ch1;
    cout << "Please Enter a Character ?\n";
    cin >> Ch1;
    return Ch1;
}

char InvertLetterCase2(char Ch1)
{
    return isupper(Ch1) ? tolower(Ch1) : toupper(Ch1);
}

bool IsVowel(char Letter)
{
    char L = InvertLetterCase2(Letter);
    if (Letter == 'a' || Letter == 'u' || Letter == 'i' || Letter == 'e' || Letter == 'o')
        return true;
    else if (L == 'a' || L == 'u' || L == 'i' || L == 'e' || L == 'o')
        return true;
    else
        return false;
}

int main()
{
    char Ch1 = ReadChar();

    if (IsVowel(Ch1))
        cout << "\nYes Letter \'" << Ch1 << "\' is vowel\n";
    else
        cout << "\nNo Letter \'" << Ch1 << "\' is not vowel\n";
   
    system("pause>0");
    return 0;
}
