#include<iostream>
#include"MyLib.h"
#include"SumLib.h"
#include <string>
#include<vector>
using namespace std;

struct BankInformation
{
	string AccNumber;
	int PinCode;
	string Name;
	string Phone;
	float AccBalance;
};

string JoinString(vector <string> vString, string delim)
{
	cout << "\nClient Record for Saving is : \n";
	string S1 = "";

	for (string& s : vString)
	{
		S1 = S1 + s + delim;
	}

	return S1.substr(0, S1.length() - delim.length());
}

vector <string> SaveInfoInVector(BankInformation DataClient)
{
	vector <string> vString;

	vString.push_back(DataClient.AccNumber);
	vString.push_back(to_string(DataClient.PinCode));
	vString.push_back(DataClient.Name);
	vString.push_back(DataClient.Phone);
	vString.push_back(to_string(DataClient.AccBalance));

	return vString;
}

BankInformation DataClient()
{
	BankInformation BankInfo;

	cout << "Enter account number ? ";
	cin >> BankInfo.AccNumber;
	cout << "Enter PinCode ? ";
	cin >> BankInfo.PinCode;
	cout << "Enter Name ? ";
	cin.ignore(numeric_limits<streamsize>::max(), '\n');
	getline(cin, BankInfo.Name);
	cout << "Enter Phone ? ";
	cin >> BankInfo.Phone;
	cout << "Enter Account Balance ? ";
	cin >> BankInfo.AccBalance;

	return BankInfo;
}

int main()
{
	cout << "Please Enter Client Data : \n\n";
	BankInformation BankInfo;

	cout << JoinString(SaveInfoInVector(DataClient()), "#//#") << endl;
	//JoinString(DataClient(BankInfo), "#//#");

}
