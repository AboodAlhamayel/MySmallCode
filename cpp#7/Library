#pragma once
#include<iostream>
using namespace std;

namespace SumLib
{
	double MySum(double a, double b)
	{
		return (a + b);
	}

	int MySum(int a, int b)
	{
		return (a + b);
	}

	int MySum(int a, int b, int c)
	{
		return (a + b + c);
	}

	int MySum(int a, int b, int c, int d)
	{
		return (a + b + c + d);
	}

