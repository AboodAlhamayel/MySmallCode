// Sol Using enum :

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include <string>
using namespace std;

string ReadString()
{
    string S1;
    cout << "Please Enter Your String ?\n";
    getline(cin, S1);
    return S1;
}

enum enWhatToCount { SmallLetters = 0, CapitalLetters = 1, All = 2 };

short CountLetters(string S1, enWhatToCount WhatToCount = enWhatToCount::All)
{
    if (WhatToCount == enWhatToCount::All)
    {
        return S1.length();
    }

    short Counter = 0;
    for (short i = 0; i < S1.length(); i++)
    {
        if (WhatToCount == enWhatToCount::CapitalLetters && isupper(S1[i]))
            Counter++;

        if (WhatToCount == enWhatToCount::SmallLetters && islower(S1[i]))
            Counter++;      
    }
    return Counter;
}

int main()
{
    string S1 = ReadString();

    cout << "\nString Length = " << S1.length() << endl;
    cout << "\nCapital Letters Count = " << CountLetters(S1, enWhatToCount::CapitalLetters);
    cout << "\nSmall Letters Count = " << CountLetters(S1, enWhatToCount::SmallLetters);

    system("pause>0");
    return 0;
}

#######################################################################
#######################################################################
#######################################################################

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include <string>
using namespace std;

string ReadString()
{
    string S1;
    cout << "Please Enter Your String ?\n";
    getline(cin, S1);
    return S1;
}

void CountCapitalLetters(string S1)
{
    short Sum = 0;
    cout << "Capital Letters Count = ";
    for (short i = 0; i < S1.length(); i++)
    {
        if (isupper(S1[i]))
        {
            Sum += 1;
        }
    }
    cout << Sum << endl;
}

void CountSmallLetters(string S1)
{
    short Sum = 0;
    cout << "Small Letters Count = ";
    for (short i = 0; i < S1.length(); i++)
    {
        if (islower(S1[i]))
        {
            Sum += 1;
        }
    }
    cout << Sum << endl;
}

int main()
{
    string S1 = ReadString();

    cout << "\nString Length = " << S1.length() << endl;

    CountCapitalLetters(S1);
    CountSmallLetters(S1);

    system("pause>0");
    return 0;
}
