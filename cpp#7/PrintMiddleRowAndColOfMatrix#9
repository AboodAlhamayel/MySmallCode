#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<iomanip>
using namespace std;

int RandomNumber(int From, int To)
{
    //Function to generate a random number

    int Random = rand() % (To - From + 1) + From;
    return Random;
}

void FillMatrixWithRandomNumbers(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            arr[i][j] = RandomNumber(1, 10);
        }
    }
}

void PrintMatrix(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            printf(" %0*d  ", 2, arr[i][j]);
            //cout << setw(3) << arr[i][j] << "   ";
        }
        cout << endl;
    }
}

void PrintMiddleRowOfMatrix(int arr[3][3], short Rows, short Cols)
{
    short MiddleRow = Rows / 2;
    for (short j = 0; j < Cols; j++)
    {
        printf(" %0*d  ", 2, arr[MiddleRow][j]);
        //cout << setw(3) << arr[MiddleRow][j] << "   ";
    }
    cout << endl;
}

void PrintMiddleColOfMatrix(int arr[3][3], short Rows, short Cols)
{
    short MiddleCol = Cols / 2;
    for (short i = 0; i < Rows; i++)
    {
        printf(" %0*d  ", 2, arr[i][MiddleCol]);
        //cout << setw(3) << arr[i][MiddleCol] << "   ";
    }
    cout << endl;
}

int main()
{
    srand((unsigned)time(NULL));
    
    int Matrix1[3][3];

    FillMatrixWithRandomNumbers(Matrix1, 3, 3);
    cout << "Matrix1 :\n";
    PrintMatrix(Matrix1, 3, 3);

    cout << "\nMiddle row of matrix1 is :\n";
    PrintMiddleRowOfMatrix(Matrix1, 3, 3);

    cout << "\nMiddle col of matrix1 is :\n";
    PrintMiddleColOfMatrix(Matrix1, 3, 3);
    system("pause>0");

    return 0;
}

#######################################################################
#######################################################################
#######################################################################

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<iomanip>
using namespace std;

int RandomNumber(int From, int To)
{
    //Function to generate a random number

    int Random = rand() % (To - From + 1) + From;
    return Random;
}

void FillMatrixWithRandomNumbers(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            arr[i][j] = RandomNumber(1, 10);
        }
    }
}

void PrintMatrix(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            printf(" %0*d  ", 2, arr[i][j]);
            //cout << setw(3) << arr[i][j] << "   ";
        }
        cout << endl;
    }
}

void PrintMiddleRow(int arr[3][3], short Rows, short Cols)
{
    cout << "\nMiddle row of matrix1 is :\n";

    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            if (i == 1)
                cout << setw(3) << arr[1][j] << "   ";
        }
    }
    cout << endl;
}

void PrintMiddleCol(int arr[3][3], short Rows, short Cols)
{
    cout << "\nMiddle col of matrix1 is :\n";

    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            if (j == 1)
                cout << setw(3) << arr[i][1] << "   ";
        }
    }
    cout << endl;
}

int main()
{
    srand((unsigned)time(NULL));
    
    int Matrix1[3][3];

    FillMatrixWithRandomNumbers(Matrix1, 3, 3);
    cout << "Matrix1 :\n";
    PrintMatrix(Matrix1, 3, 3);

    PrintMiddleRow(Matrix1, 3, 3);

    PrintMiddleCol(Matrix1, 3, 3);
    system("pause>0");

    return 0;
}
