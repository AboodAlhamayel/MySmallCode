		return Random;
	}
}
//Main:

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

int main()
{
    srand((unsigned)time(NULL));
    
    int Number[3][3];

    cout << "The following is a 3*3 random matrix :\n";
    for (int i = 0; i < 3; i++)
    {
        for (int j = 0; j < 3; j++)
        {
            cout << MyLib::RandomNumber(1, 100) << "\t";
        }
        cout << endl;
    }

    return 0;
