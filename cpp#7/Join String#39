#include<iostream>
#include"MyLib.h"
#include"SumLib.h"
#include <string>
#include<vector>
using namespace std;

string JoinString(vector<string>& vString, string Delim)
{
    string S1;
    for (string& S : vString)
    {
        S1 = S1 + S + Delim;
    }
    return S1.substr(0, S1.length() - Delim.length());
}

int main()
{
    vector<string> vString{ "ali","ahmad","mohammad" };

    cout << "\nVector after join :\n";
    cout << JoinString(vString , " ");

    system("pause>0");

    return 0;
}
