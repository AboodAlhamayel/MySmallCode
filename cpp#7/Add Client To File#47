int main()
{
	sClient Client;
	char Answer = 'y';
	string stLint = "";
	string FileName;
	string TextToAdd;

	do
	{
		cout << "Adding New Client :\n";
		Client = ReadNewClient();

		stLint = ConvertRecordToLine(Client);

		FileName = "RecordFile.txt";
		TextToAdd = stLint;
		ofstream outFile(FileName, ios::app);

		outFile << TextToAdd << endl;
		outFile.close();

		cout << "Client added successfully, Do you want to add more client ? " << endl;
		cin >> Answer;

	} while (Answer == 'y' || Answer == 'Y');


	system("pause>0");
	return 0;
}
