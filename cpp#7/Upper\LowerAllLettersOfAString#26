#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include <string>
using namespace std;

string ReadString()
{
    string S1;
    cout << "Please Enter Your String ?\n";
    getline(cin, S1);
    return S1;
}

string UpperAllLetterOfEachWord(string S1)
{
	for (short i = 0; i < S1.length(); i++)
	{
		if (S1[i] != ' ')
		{
			S1[i] = toupper(S1[i]);
		}
	}
	return S1;
}

string LowerAllLetterOfEachWord(string S1)
{
	for (short i = 0; i < S1.length(); i++)
	{
		if (S1[i] != ' ')
		{
			S1[i] = tolower(S1[i]);
		}
	}
	return S1;
}

int main()
{
    string S1 = ReadString();

    cout << "\nString after upper:\n";
	cout << UpperAllLetterOfEachWord(S1) << endl;

	cout << "\nString after lower:\n";
	cout << LowerAllLetterOfEachWord(S1) << endl;

    system("pause>0");
    return 0;
}
