#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include <string>
using namespace std;

char ReadCharacter()
{
    char C1;
    cout << "Please Enter a Character ?\n";
	cin >> C1;
    return C1;
}

char ConvertChar(char C1)
{
    if (char(C1) >= 65 && char(C1) <= 90)
    {
        return tolower(C1);
    }
    else
        return toupper(C1);
}

int main()
{
   char C1 = ReadCharacter();
   C1 = ConvertChar(C1);

    cout << "\nChar after inverting case :\n";
    cout << C1 << endl;

    system("pause>0");
    return 0;
}
