#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<iomanip>
using namespace std;

void FillMatrixWithOrderedNumbers(int arr[3][3], short Rows, short Cols)
{
    short Counter = 0;
    for (short i = 0; i < Rows; i++)
    {
        for (short j = 0; j < Cols; j++)
        {
            Counter++;
            arr[i][j] = Counter;
        }
    }
}

void TransposeMatrix(int arr[3][3], int arr1[3][3], short Rows, short Cols)
{
    short save;
    for (short i = 0; i < Rows; i++)
    {
        for (short j = 0; j < Cols; j++)
        {
            arr1[j][i] = arr[i][j];
        }
    }
}

void PrintMatrix(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            cout << setw(3) << arr[i][j] << "     ";
        }
        cout << endl;
    }
}

int main()
{
    srand((unsigned)time(NULL));
    
    int arr[3][3], arr1[3][3];
    FillMatrixWithOrderedNumbers(arr, 3, 3);

    cout << "The following is a 3*3 ordered matrix :\n";
    PrintMatrix(arr, 3, 3);

    TransposeMatrix(arr, arr1, 3, 3);

    cout << "\n\nThe following is the transposed matrix :\n";
    PrintMatrix(arr1, 3, 3);

    system("pause>0");

    return 0;
}
