#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<iomanip>
using namespace std;

void PrintMatrix(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            //printf(" %0*d  ", 2, arr[i][j]);
            cout << setw(3) << arr[i][j] << "   ";
        }
        cout << endl;
    }
}

bool IsScalarMatrix(int Matrix1[3][3], short Rows, short Cols)
{
    int FirstDiagonalElement = Matrix1[0][0];
    for (short i = 0; i < Rows; i++)
    {
        for (short j = 0; j < Cols; j++)
        {
            if (i == j && Matrix1[i][j] != FirstDiagonalElement)
            {
                return false;
            }
            else if (i != j && Matrix1[i][j] != 0)
            {
                return false;
            }
        }
    }
    return true;
}

int main()
{
    srand((unsigned)time(NULL));
    
    int Matrix1[3][3] = { {9,0,0},{0,9,0},{0,0,9} };
    //int Matrix1[3][3] = { {9,0,0},{0,5,0},{0,0,9} };

    cout << "Matrix1 :\n";
    PrintMatrix(Matrix1, 3, 3);

    if (IsScalarMatrix(Matrix1, 3, 3))
        cout << "\nYES : both matrices are scalar.";
    else
        cout << "\nNO : matrices are NOT scalar.";

    system("pause>0");

    return 0;
}

#######################################################################
#######################################################################
#######################################################################

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<iomanip>
using namespace std;

void PrintMatrix(int arr[3][3], short Rows, short Cols)
{
    for (int i = 0; i < Rows; i++)
    {
        for (int j = 0; j < Cols; j++)
        {
            //printf(" %0*d  ", 2, arr[i][j]);
            cout << setw(3) << arr[i][j] << "   ";
        }
        cout << endl;
    }
}

bool IsScalarMatrix(int Matrix1[3][3], short Rows, short Cols)
{
    short Num;
    for (short i = 0; i < Rows; i++)
    {
        for (short j = 0; j < Cols; j++)
        {
            Num = Matrix1[0][0];
            if (i == j && Matrix1[i][j] != Num)
            {
                return false;
            }
            else if (i != j && Matrix1[i][j] != 0)
            {
                return false;
            }
        }
    }
    return true;
}

int main()
{
    srand((unsigned)time(NULL));
    
    int Matrix1[3][3] = { {9,0,0},{0,9,0},{0,0,9} };
    //int Matrix1[3][3] = { {9,0,0},{0,5,0},{0,0,9} };

    cout << "Matrix1 :\n";
    PrintMatrix(Matrix1, 3, 3);

    if (IsScalarMatrix(Matrix1, 3, 3))
        cout << "\nYES : both matrices are scalar.";
    else
        cout << "\nNO : matrices are NOT scalar.";

    system("pause>0");

    return 0;
}
