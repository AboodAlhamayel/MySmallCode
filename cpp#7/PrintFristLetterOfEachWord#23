#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include <string>
using namespace std;

string EnterYourString(string Message)
{
    string UserMessage = "";
    cout << Message << endl;
    getline(cin, UserMessage);

    return UserMessage;
}

void PrintFirstLetters(string Message)
{
    int i = 0;
    while (Message.length() > i)
    {
        if (i == 0 || Message[i - 1] == ' ')
        {
            cout << Message[i] << endl;
        }
        i++;
    }
}

int main()
{
    PrintFirstLetters(EnterYourString("Please enter your string ?"));

    system("pause>0");
    return 0;
}
