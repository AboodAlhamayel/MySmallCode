#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

int main()
{
    //declare an int & float pointers
    int* ptrX;
    float* ptrY;

    //dynamically allocate memory
    ptrX = new int;
    ptrY = new float;

    //assiging value to the memory
    *ptrX = 50;
    *ptrY = 58.35f;

    cout << *ptrX << endl;
    cout << *ptrY << endl;

    //deallocate the memory
    delete ptrX;
    delete ptrY;

    return 0;
}
