// By Value :

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

void Function1(int x)
{
    x++;
}

int main()
{
    int a = 10;

    Function1(a);
    cout << a << endl;

    return 0;
}

#######################################################################
#######################################################################
#######################################################################
// By Reference :

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

void Function1(int &x)
{
    x++;
}

int main()
{
    int a = 10;

    Function1(a);
    cout << a << endl;

    return 0;
}

#######################################################################
#######################################################################
#######################################################################
// More clarification :

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

void Function1(int &x)
{
    x++;
}

int main()
{
  int a = 10;

  cout << a << endl; // print (a) 
  cout << &a << endl; // print address (a)

  return 0;
}

