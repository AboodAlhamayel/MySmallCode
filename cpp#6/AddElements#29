#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

int main()
{
    vector <int> vNumbers;

    vNumbers.push_back(10);
    vNumbers.push_back(20);
    vNumbers.push_back(30);
    vNumbers.push_back(40);
    vNumbers.push_back(50);
    vNumbers.push_back(60);
    vNumbers.push_back(70);

    cout << "Numbers Vector : \n\n";

    //ranged loop:
    for (int& Numbers : vNumbers)
    {
        cout << Numbers << endl;
    }

    cout << endl;

    return 0;
}

