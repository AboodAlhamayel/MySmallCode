//Dr's code:

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<ctime> //Use this library.

//you shoud use this too
#pragma warning(disable : 4996)
using namespace std;

int main()
{
    time_t t = time(0); // get time now
    char* dt = ctime(&t); //convert in string form
    cout << "Local date and time is : " << dt << endl;

    tm* gmtm = gmtime(&t); // converting now to tm struct for UTC date/time
    dt = asctime(gmtm);
    cout << "UTC date and time is : " << dt << endl;

    return 0;
}

