//My code:

#include<iostream>
#include "MyLib.h"
#include "SumLib.h"
#include<ctime> //Use this library.

//you shoud use this too
#pragma warning(disable : 4996)
using namespace std;

int main()
{
    time_t LocalTime = time(0); // get time now
    char* refLocalTime = ctime(&LocalTime); //convert in string form
    cout << "Local date and time is : " << refLocalTime << endl;

    tm* GreenwichTime = gmtime(&LocalTime); // converting now to tm struct for UTC date/time
    refLocalTime = asctime(GreenwichTime);
    cout << "UTC date and time is : " << refLocalTime << endl;

    return 0;
}
