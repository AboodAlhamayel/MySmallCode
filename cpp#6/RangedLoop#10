#include<iostream>
#include "MyLib.h"
using namespace std;

int main()
{
	int Array1[] = { 1,2,3,4 };
	for (int n : Array1)
	{
		cout << n << endl;
	}

	//You Can Write Code With Another Way :

	cout << endl;
	for (int n : {1, 2, 3, 4})
	{
		cout << n << endl;
	}

	return 0;
}

//##########################################################
//other example :

#include<iostream>
#include "MyLib.h"
using namespace std;

int main()	
{
    string AppOptions[] = { "ADD", "Enter", "Info", "Settings", "Help", "Exit" };
    int num = 1;
    for (string name : AppOptions)
    {
        cout << num << " - " << name << endl;
        ++num;
    }
	return 0;
}
