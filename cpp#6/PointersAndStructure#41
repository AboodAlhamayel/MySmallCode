#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

struct stEmployee
{
    string Name;
    float Salary;
};

int main()
{
    stEmployee Employee, * ptr;
    Employee.Name = "Abood Al-Hamayel";
    Employee.Salary = 5000;

    cout << Employee.Name << endl;
    cout << Employee.Salary << endl;

    ptr = &Employee;

    cout << "\nUsing Pointer :\n";
    cout << ptr->Name << endl;
    cout << ptr->Salary << endl;

    return 0;
}
