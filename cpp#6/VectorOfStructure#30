//Second Sol : (without number of employee ) :

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

struct stEmployee
{
    string FirstName;
    string LastName;
    float Salary;
};

void ReadEmployees(vector <stEmployee>& vEmployee, stEmployee& tempEmployee)
{
    char ReadMore = 'Y';

    while (ReadMore == 'Y' || ReadMore == 'y')
    {
            cout << "Please enter a first name : ";
            cin >> tempEmployee.FirstName;
            cout << "Please enter a last name : ";
            cin >> tempEmployee.LastName;
            cout << "Please enter a salary : ";
            cin >> tempEmployee.Salary;
            vEmployee.push_back(tempEmployee);
            cout << "\n\n";
        cout << "\n\nDo you want more employees ? Y/N :";
        cin >> ReadMore;
    }
}

void PrintEmployees(vector <stEmployee>& vEmployee, stEmployee& tempEmployee)
{
    cout << "\n\nEmployees Vector : " << endl;

    for (stEmployee& Employee : vEmployee)
    {
        cout << "First Name : " << tempEmployee.FirstName << endl;
        cout << "Last Name : " << tempEmployee.LastName << endl;
        cout << "Salary : " << tempEmployee.Salary << endl;
        cout << endl;
    }
}

int main()
{
    vector <stEmployee> vEmployee;
    stEmployee tempEmployee;

    ReadEmployees(vEmployee, tempEmployee);
    PrintEmployees(vEmployee, tempEmployee);

    return 0;
}

