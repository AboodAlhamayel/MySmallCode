//Dr.Sol :

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
#include<cstdio>
#include<vector>
using namespace std;

struct stEmployee
{
    string FirstName;
    string LastName;
    float Salary;
};

void ReadEmployees(vector <stEmployee>& vEmployee)
{
    char ReadMore = 'Y';
    stEmployee tempEmployee;

    while (ReadMore == 'Y' || ReadMore == 'y')
    {
            cout << "Please enter a first name : ";
            cin >> tempEmployee.FirstName;
            cout << "Please enter a last name : ";
            cin >> tempEmployee.LastName;
            cout << "Please enter a salary : ";
            cin >> tempEmployee.Salary;
            vEmployee.push_back(tempEmployee);

        cout << "\nDo you want more employees ? Y/N :";
        cin >> ReadMore;
    }
}

void PrintEmployees(vector <stEmployee>& vEmployee)
{
    cout << "\n\nEmployees Vector : " << endl;

    for (stEmployee& Employee : vEmployee)
    {
        cout << "First Name : " << Employee.FirstName << endl;
        cout << "Last Name : " << Employee.LastName << endl;
        cout << "Salary : " << Employee.Salary << endl;
        cout << endl;
    }
}

int main()
{
    vector <stEmployee> vEmployee;

    ReadEmployees(vEmployee);
    PrintEmployees(vEmployee);

    return 0;
}




