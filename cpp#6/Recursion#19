//HomeWork 2 : program to calculate power N^M

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

int MyPower(int Base, int Power)
{
    if (Power == 0)
        return 1;
    else
        return (Base * MyPower(Base , Power - 1));
}

int main()
{
    cout << MyPower(2, 4) << endl;

    return 0;
}
