//HomeWork 1 : program to print numbers from M down to N

#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

void PrintNumbers(int M, int N)
{
    if (M >= N)
    {
        cout << M << endl;
        PrintNumbers(M - 1, N);
    }
}

int main() {

    PrintNumbers(10,1);

    return 0;
}
