#include<iostream>
#include<iomanip>
#include "MyLib.h"
#include "SumLib.h"
using namespace std;

void PrintNumbers(int N, int M)
{
    if (N <= M)
    {
        cout << N << endl;
        PrintNumbers(N + 1, M);
    }
}

int main() 
{

    PrintNumbers(1,4);

    return 0;
}

