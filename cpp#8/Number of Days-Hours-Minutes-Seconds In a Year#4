#include<iostream>
#include<string>
#include"Course8.h";

using namespace std;

bool IsLeapYear(int Year)
{
	return ((Year % 400) == 0 || (Year % 4) == 0 && Year % 100 != 0);
}

int ReadYear()
{
	short Number;
	cout << "Enter a number ? ";
	cin >> Number;

	return Number;
}

short Days(short Year)
{
	if (IsLeapYear(Year))
	{
		return 366;
	}
	else
	{
		return 365;
	}
}

short Hours(short Day)
{
	return (Day * 24);
}

int Minutes(short Hour)
{
	return (Hour * 60);
}

int Seconds(int Minute)
{
	return (Minute * 60);
}

void CalculateYear(short Year)
{
	short Day = Days(Year);
	short Hour = Hours(Day);
	int Minute = Minutes(Hour);
	int Second = Seconds(Minute);

	cout << "Number Of Days in Year    [" << Year << "] is " << Day << endl;
	cout << "Number Of Hours in Year   [" << Year << "] is " << Hour << endl;
	cout << "Number Of Minutes in Year [" << Year << "] is " << Minute << endl;
	cout << "Number Of Seconds in Year [" << Year << "] is " << Second << endl;
}

int main()
{
	short Year = ReadYear();

	CalculateYear(Year);

	system("pause>0");
	return 0;
}
